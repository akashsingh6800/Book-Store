<%- include('../includes/header.ejs') %>

</head>
<body>

    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(cart.length>0) { %>
        
        <div class="grid">
            <% for (let product of cart) {%>
              
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%=product.productData.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.productData.imageURL%>" alt="<%=product.productData.title %>">
                </div>
                <div class="card__content">
                    <h2>Count = <%=product.qty%></h2>
                    <h2 class="product__price">$<%=product.productData.price%></h2>
                    <p class="product__description"><%=product.productData.description%></p>
                </div>
               
                <div class="card__actions">
                   <!-- <a class="btn" href="/admin/edit-product/<%=product.id%>?edit=true">Edit</a> --->
                    <form method="POST" action="/deleteFromCart/<%=product.productData.id%>">
                    <button class="btn" type="submit"> Delete</button>
                    </form>
                </div>
            </article>
       
            <%}%>
        </div>
        
        <% } else {%>
            <h1>No Products</h1>
            <% } %>
    </main>

<%- include('../includes/end.ejs') %>